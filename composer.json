{
    "name": "luffynando/sat-scrapers-auth",
    "description": "Php library to make authentication process on various SAT sites",
    "keywords": [
        "sat",
        "scrap",
        "mexico",
        "authentication",
        "login",
        "fiel",
        "ciec"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Fernando Isidro Luna",
            "email": "luffynando@gmail.com"
        }
    ],
    "type": "library",
    "require": {
        "php": ">=8.2",
        "ext-curl": "*",
        "ext-dom": "*",
        "guzzlehttp/guzzle": "^7.8.1",
        "phpcfdi/credentials": "^v1.2.1",
        "phpcfdi/image-captcha-resolver": "^0.2.3",
        "psr/http-message": "^2.0",
        "symfony/css-selector": "^7.0",
        "symfony/dom-crawler": "^7.0"
    },
    "require-dev": {
        "laravel/pint": "^v1.13.9",
        "pestphp/pest": "^2.31",
        "phpstan/phpstan": "^1.10.56",
        "rector/rector": "^0.19.2",
        "symfony/dotenv": "^v7.0.2",
        "symfony/var-dumper": "^v7.0.2"
    },
    "autoload": {
        "psr-4": {
            "SatScrapersAuth\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "scripts": {
        "refacto": "rector",
        "lint": "pint",
        "test:refacto": "rector --dry-run",
        "test:lint": "pint --test",
        "test:types": "phpstan analyse --ansi",
        "test:unit": "pest --colors=always --group=unit --mutate --no-cache",
        "test": [
            "@test:refacto",
            "@test:lint",
            "@test:types",
            "@test:unit"
        ]
    }
}
